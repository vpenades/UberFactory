<UserControl x:Class="Epsylon.UberFactory.Themes.DataTemplates.PathPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Epsylon.UberFactory.Themes.DataTemplates"
             mc:Ignorable="d">
    
    <DockPanel>
        <Button DockPanel.Dock="Right" Content="{StaticResource _FolderIcon}" Click="_OnClick_PickFile" />
        <TextBox Text="{Binding FileName,Mode=OneWay}" IsReadOnly="True"
                         Foreground="{Binding HasValue,Converter={StaticResource __booleanAsColor}}"
                         ToolTip="{Binding FilePath,Mode=OneWay}"
                         />
    </DockPanel>
</UserControl>
