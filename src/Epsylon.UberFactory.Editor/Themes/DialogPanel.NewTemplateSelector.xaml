<UserControl x:Class="Epsylon.UberFactory.Themes.NewTemplateSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Epsylon.UberFactory.Themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        
    </UserControl.Resources>

    <GroupBox Style="{StaticResource PlainTextGroupBoxStyle}" Header="Select Template">
        <ListBox ItemsSource="{Binding Collection}" SelectedValue="{Binding Selected}" DisplayMemberPath="Title"  />
    </GroupBox>

</UserControl>
